    <title>Catálogo Gigantronic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="icon" href="/assets/imagenes/icono_Gigantronic.png">
</head>

<body>
<header>
        <nav class="navbar navbar-expand-lg barra w-100">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" href="index.html">
                    <img class="logo" src="/assets/imagenes/icono_Gigantronic.png" alt="Logo de Gigantronic"
                        loading="lazy">
                    <span class="fw-bold display-6 gigantronic-logo">GIGANTRONIC</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Abrir menu de navegacion">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-1">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="index.html">Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="productosDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false" aria-label="Abrir menú de productos">
                                Productos
                            </a>
                            <ul class="dropdown-menu dropdownMenu" aria-labelledby="productosDropdown">
                                <li><a class="dropdown-item" href="/views/inventarioDvr.html">DVR</a></li>
                                <li><a class="dropdown-item" href="inventarioCamaras.html">CÁMARAS</a></li>
                                <li><a class="dropdown-item" href="inventarioCamarasWifi.html">CÁMARAS WIFI</a></li>
                                <li><a class="dropdown-item" href="inventarioAsesorios.html">ACCESORIOS</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/views/productosMarca.html">Marcas</a>
                        </li>
                    </ul>
                    <form class="d-flex mt-1" role="search" style="width: 60%;">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </form>
                    <div class="d-flex ms-auto mt-1">
                        <a href="/views/carrito.html" class="btn btn-primary me-2 position-relative"
                            aria-label="Ir al carrito de compras">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="carrito-badge"
                                class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-danger"
                                style="font-size:0.75rem;">
                                2
                                <span class="visually-hidden">productos en el carrito</span>
                            </span>
                        </a>
    
                    </div>
                </div>
            </div>
        </nav>
    </header>



    <main class="container my-5">
        <h1 class="text-center mb-5">Catálogo de Productos</h1>
        <div class="row" id="catalogoProductos">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/assets/imagenes/camaraHikvisionRDS-2CE70D0T-PTLXTS(2.8MM).png" class="card-img-top" alt="Camara Hikvision">
                    <div class="card-body text-center">
                        <h5 class="card-title">Camara Hikvision</h5>
                        <p class="card-text precio">172900</p>
                        <button class="btn btn-success agregar-carrito">Agregar al carrito</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/assets/imagenes/Hilook-THC-B127-LPS(2.8MM).png" class="card-img-top" alt="Camara Hilook">
                    <div class="card-body text-center">
                        <h5 class="card-title">Camara Hilook</h5>
                        <p class="card-text precio">75100</p>
                        <button class="btn btn-success agregar-carrito">Agregar al carrito</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/assets/imagenes/Ezviz-CS-H6C-R105-1L3WF.png" class="card-img-top" alt="Camara Ezviz">
                    <div class="card-body text-center">
                        <h5 class="card-title">Camara Ezviz</h5>
                        <p class="card-text precio">128300</p>
                        <button class="btn btn-success agregar-carrito">Agregar al carrito</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-body">
                <h4>Carrito</h4>
                <ul id="lista-carrito" class="list-group mb-3"></ul>
                <p>Total: <span id="total" class="fw-bold">$0</span></p>
                <button id="vaciar-carrito" class="btn btn-danger">Vaciar carrito</button>
            </div>
        </div>
    </main>

    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2025 Gigantronic. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script>
        const botonesAgregar = document.querySelectorAll('.agregar-carrito');
        const listaCarrito = document.getElementById('lista-carrito');
        const totalSpan = document.getElementById('total');
        const vaciarCarritoBtn = document.getElementById('vaciar-carrito');
        let total = 0;

        botonesAgregar.forEach(btn => {
            btn.addEventListener('click', () => {
                const card = btn.closest('.card-body');
                const nombre = card.querySelector('.card-title').textContent;
                const precio = parseInt(card.querySelector('.precio').textContent);

                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `${nombre} <span>$${precio}</span>`;
                listaCarrito.appendChild(li);

                total += precio;
                totalSpan.textContent = `$${total}`;
            });
        });

        vaciarCarritoBtn.addEventListener('click', () => {
            listaCarrito.innerHTML = '';
            total = 0;
            totalSpan.textContent = `$0`;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
